@model FamilyPhotos.ViewModel.PhotoViewModel

<div class="form-group">
    @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "col-xs-3 control-label" })
    <div class="col-xs-3">
        @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "col-xs-4 form-control", disabled = "disabled" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Company, htmlAttributes: new { @class = "col-xs-3 control-label" })
    <div class="col-xs-3">
        @Html.TextBoxFor(m => m.Company, htmlAttributes: new { @class = "col-xs-4 form-control", disabled = "disabled" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.FaceBookProfil, htmlAttributes: new { @class = "col-xs-3 control-label" })
    <div class="col-xs-3">
        @Html.TextBoxFor(m => m.FaceBookProfil, htmlAttributes: new { @class = "col-xs-4 form-control", disabled = "disabled" })
    </div>
</div>
<div class="form-group">
     @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "col-xs-3 control-label" })
     <div class="col-xs-3">
     @Html.TextAreaFor(m => m.Description, htmlAttributes: new { @class = "col-xs-4 form-control", disabled = "disabled" })
     </div>
</div>
    <div class="form-group">
        @Html.LabelFor(m => m.PictureFromBrowser, htmlAttributes: new { @class = "col-xs-3 control-label" })

        @if (Model != null)
        {
            <image src="@Url.Action("GetImage", new { photoId = Model.Id })" class="col-xs-3" />
        }
    </div>



